<Window x:Class="Control_CB.Tab_Control"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Control_CB"
        mc:Ignorable="d"
        Title="Tab_Control" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TabControl TabStripPlacement="Top" Background="Beige"
                        BorderBrush="Blue" Margin="10">
                <TabItem Header="Name" IsSelected="True">
                    <TextBlock Text="Đào Công Lương" Height="300"/>
                </TabItem>
                <TabItem Header="Image">
                    <Image Source="embe.png" Stretch="Fill" Width="300" Height="300"/>
                </TabItem>
                <TabItem Header="Hotel">
                    
                </TabItem>
                <TabItem Header="Contact US" HorizontalAlignment="Right" Margin="-2.333,-2,-2,0" Width="75">
                    <StackPanel>
                        <local:UserControl_DangNhap/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Window>
